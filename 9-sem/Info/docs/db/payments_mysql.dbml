// TechMarket — Payment Service DB (MySQL)
// DB-per-service: платежі; посилання на замовлення — без FK між БД

Table payments {
  id uuid [primary key]
  order_id uuid [note: 'Ref: Orders DB (orders.id), без FK між БД']
  method varchar [note: 'card, paypal, etc.']
  paid_at datetime
  amount decimal

  Indexes {
    (order_id)
  }
}

