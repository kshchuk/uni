// TechMarket — Payment Service DB (MySQL)
// DB-per-service: платежі; посилання на замовлення — без FK між БД

Table payments {
  id char(36) [primary key]
  order_id char(36) [note: 'Ref: Orders DB (orders.id), без FK між БД']
  method varchar(50) [note: 'card, paypal, etc.']
  paid_at datetime
  amount decimal(10,2)

  Indexes {
    (order_id)
  }
}

